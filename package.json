{
  "name": "orbit-messenger",
  "version": "1.0.0",
  "description": "Orbit Messenger Chat App",
  "author": "Your Name",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win"
  },
  "build": {
    "appId": "com.orbit.messenger",
    "productName": "Orbit Messenger",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": "portable"
    }
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.3.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "mongoose": "^7.0.0",
    "cors": "^2.8.5"
  }
}
