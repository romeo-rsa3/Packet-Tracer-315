{
  "name": "orbit-messenger",
  "version": "1.0.0",
  "main": "main.js",
  "build": {
    "appId": "com.orbit.messenger",
    "productName": "Orbit Messenger",
    "directories": {
      "output": "dist"
    },
    "files": [
  "**/*",
  "!node_modules/**/*",
  "!dist/**/*"
    ],

    "win": {
      "target": "portable"
    }
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win"
  },
  "devDependencies": {
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "mongoose": "^7.0.0"
  }
}
